resource "aws_db_instance" "my_db_instance" {
  allocated_storage    = 20
  storage_type        = "gp2"
  engine              = "mysql"
  engine_version      = "8.0"
  instance_class      = "db.t2.micro"
  name                = "mydbinstance"
  username            = "admin"
  password            = "mysecretpassword"
  parameter_group_name = aws_db_parameter_group.custom_pg.name
  subnet_group_name   = aws_db_subnet_group.my_subnet_group.name
  multi_az            = true

  tags = {
    Name = "MyDBInstance"
  }
}
